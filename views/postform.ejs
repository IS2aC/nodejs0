                            <td><input type="button" value="modifier" id="update" onclick="remplirFormUpdate('<%= resultat[i].userID %>','<%= resultat[i].userEmail %>','<%= resultat[i].userPwd %>','<%= resultat[i].nom %>','<%= resultat[i].prenom %>')"></td>
                            <td><input type="submit" value="supprimer"></td>
                        </form>
                        
                    </tr>
                <% } %>
            </tbody>
          </table>
    </div>
</body>

