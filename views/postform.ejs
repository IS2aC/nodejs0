                <th scope="col"></th>
              </tr>
            </thead>

            <tbody>
                <% for(i=0; i<resultat.length; i++) { %>
                    <tr>
                        <td><%=resultat[i].userID%></td>
                        <td><%=resultat[i].userEmail%></td>
                        <td><%=resultat[i].userPwd%></td>
                        <td><%=resultat[i].nom%></td>
                        <td><%=resultat[i].prenom%></td>
                        <form action="/delete" method="post">
